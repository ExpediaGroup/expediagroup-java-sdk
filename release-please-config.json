      "prerelease-type": "alpha",
      "extra-files": [
        "gradle.properties"
      ]
    },
    "expediagroup-sdk-transport-okhttp": {
      "path": "expediagroup-sdk-transport-okhttp",
      "component": "expediagroup-sdk-transport-okhttp",
      "prerelease-type": "alpha",
      "extra-files": [
        "gradle.properties"
      ]
